{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average Social Media Addiction Score by Country",
  "width": 800,
  "height": 500,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/datasets/geo-countries/main/data/countries.geojson",
    "format": {"type": "json", "property": "features"}
  },
  "transform": [
    {
      "lookup": "properties.ADMIN",
      "from": {
        "data": {
          "url": "https://gist.githubusercontent.com/amolikay/a684a8a8a416361a2751a0b3c0c551f0/raw/260e2a8eacca5847f7871fe93c89c6c55362d7ce/addiction_data.csv"
        },
        "key": "Country",
        "fields": ["Addicted_Score"]
      }
    },
    {
      "aggregate": [
        {"op": "mean", "field": "Addicted_Score", "as": "avg_addicted_score"}
      ],
      "groupby": ["properties.ADMIN"]
    }
  ],
  "mark": {"type": "geoshape", "stroke": "white"},
  "encoding": {
    "color": {
      "condition": {
        "test": "datum.avg_addicted_score !== null",
        "field": "avg_addicted_score",
        "type": "quantitative",
        "scale": {"scheme": "viridis"},
        "title": "Avg. Addicted Score"
      },
      "value": "lightgray"
    },
    "tooltip": [
      {"field": "properties.ADMIN", "type": "nominal", "title": "Country"},
      {
        "field": "avg_addicted_score",
        "type": "quantitative",
        "title": "Average Addicted Score",
        "format": ".2f"
      }
    ]
  }
}
