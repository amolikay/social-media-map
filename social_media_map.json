{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Global Social Media Usage and Mental Health Impact (2024)",
    "fontSize": 16,
    "anchor": "start",
    "color": "#333"
  },
  "width": 800,
  "height": 500,
  "projection": {
    "type": "equirectangular",
    "center": [0, 20],
    "scale": 120
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/holtzy/D3-graph-gallery/master/DATA/world.geojson"
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f0f0f0",
        "stroke": "#ccc",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/holtzy/D3-graph-gallery/master/DATA/world.geojson"
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "data/social_media_usage.csv"
            },
            "key": "Country",
            "fields": ["Avg_Daily_Usage_Hours", "Mental_Health_Score", "Addicted_Score"]
          }
        },
        {
          "filter": "datum.Avg_Daily_Usage_Hours != null"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#fff",
        "strokeWidth": 0.8
      },
      "encoding": {
        "color": {
          "field": "Avg_Daily_Usage_Hours",
          "type": "quantitative",
          "scale": {
            "scheme": "oranges",
            "domain": [0, 8]
          },
          "legend": {
            "title": "Daily Usage (Hours)",
            "orient": "bottom-right",
            "gradientLength": 200
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Avg_Daily_Usage_Hours", "type": "quantitative", "title": "Daily Usage (Hours)", "format": ".1f"},
          {"field": "Mental_Health_Score", "type": "quantitative", "title": "Mental Health Score", "format": ".1f"},
          {"field": "Addicted_Score", "type": "quantitative", "title": "Addiction Score", "format": ".1f"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/holtzy/D3-graph-gallery/master/DATA/world.geojson"
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "data/social_media_usage.csv"
            },
            "key": "Country",
            "fields": ["Avg_Daily_Usage_Hours", "Mental_Health_Score", "Addicted_Score"]
          }
        },
        {
          "filter": "datum.Avg_Daily_Usage_Hours != null && datum.Avg_Daily_Usage_Hours >= 6"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "transparent",
        "stroke": "#d62728",
        "strokeWidth": 2,
        "strokeDash": [4, 2]
      }
    }
  ],
  "resolve": {
    "scale": {
      "color": "independent"
    }
  }
}
